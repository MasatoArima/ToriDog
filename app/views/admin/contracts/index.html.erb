<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>契約書一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>契約日</th>
            <th>契約ID</th>
            <th>飼い主</th>
            <th>トリマー</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @contracts.each do |contract| %>
              <tr>
                <td>
                  <%= link_to admin_contract_path(contract.id) do %>
                    <%= contract.updated_at.to_s(:datetime_jp) %>
                  <% end %>
                </td>
                <td><%= contract.id %></td>
                <td><%= @customers.find(@requests.find(@applications.find(contract.application_id).request_id).customer_id).last_name %><%= @customers.find(@requests.find(@applications.find(contract.application_id).request_id).customer_id).first_name %></td>
                <td><%= @customers.find(@applications.find(contract.application_id).customer_id).last_name %><%= @customers.find(@applications.find(contract.application_id).customer_id).first_name %></td>
                <td><%= contract.is_status_i18n %></td>
        　<% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>