<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container ">
    <a class="navbar-brand" href="/"><%= image_tag('logo.jpg', size: ("150x80"), class:"logo", data: {"turbolinks"=>false}) %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item text-center mr-3"><%= link_to news_index_path, class: 'nav-link news' do %><i class="fas fa-envelope"></i><br>News<% end %></li>
        <% if customer_signed_in? %>
          <% if current_customer.user_status == "trimmer" %>
            <li class="nav-item text-center mr-3"><%= link_to customers_path, class: 'nav-link' do %><i class="fas fa-paw fa-lg"></i><br>依頼一覧<% end %></li>
          <% else %>
            <li class="nav-item text-center mr-3"><%= link_to customers_path, class: 'nav-link', data: {"turbolinks"=>false} do %><i class="fas fa-cut"></i><br>トリマー一覧<% end %></li>
            <li class="nav-item text-center mr-3"><%= link_to dogs_path, class: 'nav-link' do %><i class="fas fa-paw fa-lg"></i><br>愛犬ページ<% end %></li>
          <% end %>
            <li class="nav-item text-center mr-3"><%= link_to customers_mypage_path, class: 'nav-link' do %><i class="fas fa-address-card fa-lg"></i><br>マイページ<% end %></li>
            <li class="nav-item text-center mr-3"><%= link_to rooms_path, class: 'nav-link' do %><i class="fas fa-address-card fa-lg"></i><br>チャット<% end %></li>
            <li class="nav-item text-center mr-3"><%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link' do %><i class="fas fa-sign-out-alt fa-lg"></i><br>Logout<% end %></li>
        <% elsif admin_signed_in? %>
          <li class="nav-item text-center mr-3"><%= link_to admin_contracts_path, class: 'nav-link' do %><i class="fas fa-paw fa-lg"></i><br>契約一覧<% end %></li>
          <li class="nav-item text-center mr-3"><%= link_to admin_customers_path, class: 'nav-link' do %><i class="fas fa-paw fa-lg"></i><br>会員一覧<% end %></li>
          <li class="nav-item text-center mr-3"><%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link' do %><i class="fas fa-sign-out-alt fa-lg"></i><br>Logout<% end %></li>
        <% else %>
          <li class="nav-item text-center mr-3"><%= link_to about_path, class: 'nav-link' do %><i class="fas fa-paw fa-lg"></i><br>about<% end %></li>
          <li class="nav-item text-center mr-3"><%= link_to new_customer_registration_path, class: 'nav-link', data: {"turbolinks"=>false} do %><i class="fas fa-user-plus fa-lg"></i><br>Signup<% end %></li>
          <li class="nav-item text-center mr-3"><%= link_to new_customer_session_path, class: 'nav-link' do %><i class="fas fa-paw fa-lg"></i><br>Login<% end %></li>
        <% end %>
          <li class="nav-item text-center mr-3"><%= link_to contacts_path, class: 'nav-link' do %><i class="fas fa-envelope"></i><br>問い合わせ<% end %></li>
        </ul>
      </div>
    </div>
  </nav>
</header>