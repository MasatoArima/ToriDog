<div class="container">
  <div class="row">
    <div class="col-6">
      <table class="table table-striped" style="width: 500px">
        <tr><th style="width: 100px">名前</th><th><%= @dog.name %></th></tr>
        <tr><td>フリガナ</td><td><%= @dog.name_kana %></td></tr>
        <tr><td>犬種</td><td><%= @dog.breed %></td></tr>
        <tr><td>性別</td><td><%= sex(@dog) %></td></tr>
        <tr><td>サイズ</td><td><%= @dog.size %></td></tr>
        <tr><td>ワクチン</td><td><%= is_inoculate(@dog) %></td></tr>
        <tr><td>誕生日</td><td><%= @dog.birthday %></td></tr>
        <tr><td>既往歴</td><td><%= @dog.medical_history %></td></tr>
        <tr><td>紹介文</td><td><%= @dog.introduction %></td></tr>
      </table>
      <div class="text-center mt-4">
        <% if current_customer.id == @dog.customer_id %>
          <%= link_to "愛犬編集", edit_dog_path(@dog), class: "btn btn-success", style: "width:150px" %>
          <%= link_to "愛犬情報削除", dog_path(@dog), method: :delete, class: "btn btn-danger", style: "width:150px" %>
        <% end %>
      </div>
    </div>
    <div class="col-6">
      <% if @dog.dog_image.attached? %>
        <%= image_tag @dog.dog_image.variant(resize:'300x300').processed %><br>
      <% end %>
        <% @dog.trimming_images.each do |image| %>
          <%= image_tag image.variant(resize:'150x150').processed %>
        <% end %>
    </div>
  </div>
</div>




