<div class='container'>
  <div class='row'>
    <div class="col md-5">
      <div class='w-75 p-3'>
        <h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_customer.id %>"><%= @customer.full_name %> さんとのチャット</h1>
        <div id="chat" data-room_id="<%= @room.id %>">
          <%= render @chats %>
        </div>
      </div>
    </div>
  </div>
  <div class="w-75 p-3 text-right">
    <%= form_with model: @chat do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "投稿する" %>
    <% end %>
  </div>

</div>


