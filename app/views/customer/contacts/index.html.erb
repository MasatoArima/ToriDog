<div class="container">
  <div class="row">
    <div class="col-6">
      <h2 class="text-center">お問い合わせ</h2>
      <%= render 'layouts/error', obj: @contact %>
      <%= form_for(@contact) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前*' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number, '電話番号' %>
          <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :subject, '要件*' %>
          <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message, 'メッセージ*' %>
          <%= f.text_area :message, size: '5x5', class: 'form-control' %>
        </div>
        <div class="text-right">
          <%= f.submit '送信する', class: "clickon", data: { confirm: "この内容で送信する"} %>
        </div>
      <% end %>
    </div>
    <div class="col-5">
      <div class="contact"></div>
    </div>
  </div>
</div>



