<div class="container">
  <div class="row">
  <h2>いいねしてくれたユーザー</h2>
    <% if @customers.exists? %>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <% if customer.profile_image.attached? %>
                  <%= image_tag customer.profile_image.variant(resize:'50x50').processed %>
                <% else %>
                  <%= image_tag("no_image.jpg", :size => "50x50") %>
                <% end %>
              </td>
              <td><%= customer.full_name %></td>
              <td><%= link_to 'Show', customer_path(customer) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>ユーザーはいません</td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

