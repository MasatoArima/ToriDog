<div class="container">
  <div class="row">
    <div class="col-4">
      <h4 class="text-center">ユーザー検索欄</h4>
      <%= search_form_for @q do |f| %>
        <%= f.label "　　　　" %>
        <%=f.search_field:last_name_or_first_name_or_last_name_kana_or_first_name_kana_or_introduction_cont, placeholder: "キーワード検索"%><br>

        <%= f.label :prefecture_code, "都道府県" %>
        <%= f.search_field :prefecture_code_cont %><br>
        <%= f.label :city, "市区町村" %>
        <%= f.search_field :city_cont %><br>
        <%= f.submit "検索" %>
      <% end %>

    </div>
    <div class="col-8">
      <% if is_trimmer? %>
        <%= render 'customer/customers/trimmer-index', dog_owners: @dog_owners, requests: @requests, dogs: @dogs, customers: @customers, applications: @applications %>
      <% else %>
        <%= render 'customer/customers/dog_owner-index', trimmers: @trimmers, map_trimmers: @map_trimmers%>
      <% end %>
    </div>
  </div>
</div>





