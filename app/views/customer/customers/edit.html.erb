<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>

<h2>編集画面</h2>

<%= form_with model: @customer, url: customer_path, local: true do |f| %>
  <div class="field">
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
  </div>
  <div class="field">
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :last_name_kana, "セイ" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name" %>
  </div>
  <div class="field">
    <%= f.label :first_name_kana, "メイ" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autofocus: true, autocomplete: "postal-code" %>
  </div>
  <div class="field">
    <%= f.label :prefecture_code, "都道府県" %>
    <%= f.text_field :prefecture_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :city, "町村" %>
    <%= f.text_field :city, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :street, "番地" %>
    <%= f.text_field :street, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :other_address, "その他" %>
    <%= f.text_field :other_address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :introduction, "自己紹介文" %>
    <%= f.text_field :introduction, autofocus: true %>
  </div>
  <div>
    <%= f.label :profile_image , "プロファイル画像" %>
    <%= f.file_field :profile_image %>
  </div>
  <% if is_trimmer? %>
    <div>
      <%= f.label :cut_images , "トリミング画像" %>
      <%= f.file_field :cut_images, multiple: true %><br>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "編集を保存" %>
  </div>
<% end %>

